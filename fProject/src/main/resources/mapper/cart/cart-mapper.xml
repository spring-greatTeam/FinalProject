<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.project.fin.cart.model.dao.CartDao">
  	<resultMap type="Cart" id="cartMap"></resultMap>
  	<insert id="insertCart" parameterType="Cart">
  	insert into cart
  	values(
  		SEQ_CART.nextval,
  		#{memberId},
  		#{storeName},
  		#{storeNo},
  		#{menuName},
  		#{totalPrice},
  		#{quantity},
  		#{opTitle},
  		#{opName}
  	)
  	</insert>
  	
  <select id="selectCatList" resultMap="cartMap">
  select * 
  from cart
  where member_ID = #{memberId}
  </select>
  
  <delete id="deleteCart">
  delete from cart
  where member_ID = #{userName}
  </delete>
  
  <update id="updateCart" parameterType="_int">
  update cart
  set QUANTITY = #{newQuantity}
  where cart_no = #{nowCartNo}
  </update>
  </mapper>